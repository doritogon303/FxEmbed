{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "target": "ES2024",
    "lib": ["ES2024"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "@cloudflare/vitest-pool-workers", "@sentry/integrations", "./src/types/"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
